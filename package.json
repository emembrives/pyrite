{
  "name": "@garage44/pyrite",
  "version": "1.0.0",
  "description": "<img height=\"100\" src=\"./media/logo-text.svg\">",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "galene": "docker-compose -f galene/docker/docker-compose.yml --project-directory ./galene up --remove-orphans",
    "lint": "npm run lint:js;npm run lint:scss",
    "lint:js": "eslint \"packages/gui/src/**/*.{js,vue}\"",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garage44/pyrite.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garage44/pyrite/issues"
  },
  "homepage": "https://github.com/garage44/pyrite#readme",
  "workspaces": [
    "packages/admin",
    "packages/gui"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^7.16.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-sort-class-members": "^1.9.0",
    "eslint-plugin-vue": "^7.3.0",
    "sass": "^1.38.0",
    "semantic-release": "^17.3.2",
    "stylelint": "^13.7.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "VITE_VERSION=${nextRelease.version} npm run build;npm run deploy"
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
